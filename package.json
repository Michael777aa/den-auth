{
  "name": "fastify-backend-project",
  "version": "1.0.0",
  "description": "Car Washing Service API with Fastify, MongoDB, and OAuth",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "seed": "ts-node src/seed.ts",
    "build": "npm run clean && tsc && npm run copy-files",
    "clean": "rimraf dist",
    "copy-files": "copyfiles -u 1 src/**/*.graphql src/**/*.ejs src/**/*.html src/**/*.txt src/uploads dist/",
    "start": "node dist/server.js",
    "start:prod": "cross-env NODE_ENV=production node dist/server.js",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "test": "jest",
    "prepare": "husky install"
  },
  "keywords": [
    "fastify",
    "mongodb",
    "oauth",
    "car-washing",
    "api"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "ISC",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.0.1",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/static": "^8.1.1",
    "@fastify/swagger": "^9.5.0",
    "@fastify/swagger-ui": "^5.2.2",
    "@prisma/client": "^5.6.0",
    "axios": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "fastify": "^5.3.2",
    "fastify-plugin": "^4.5.0",
    "jose": "^6.0.11",
    "mongoose": "^8.15.0",
    "pino-pretty": "^10.2.3",
    "sharp": "^0.34.1",
    "socket.io": "^4.8.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@fastify/multipart": "^9.0.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.9.1",
    "@types/socket.io": "^3.0.1",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^10.0.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prisma": "^5.6.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
